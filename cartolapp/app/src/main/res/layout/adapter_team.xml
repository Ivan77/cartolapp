<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/small_margin"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <RelativeLayout
      android:orientation="horizontal"
      android:id="@+id/layout"
      android:padding="@dimen/default_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/photo_dimen"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/photo_dimen"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/body"
        android:layout_toRightOf="@+id/photo"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/name"
          android:layout_marginLeft="@dimen/default_margin"
          android:textStyle="bold"
          android:textColor="@color/colorPrimaryDark"
          android:text="@string/title_example"
          android:textSize="@dimen/medium_font"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/owner"
          android:layout_marginTop="@dimen/tiny_margin"
          android:layout_marginLeft="@dimen/default_margin"
          android:maxLines="1"
          android:text="@string/owner_example"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/points"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/xxlarge_font"
        android:textStyle="bold"
        android:text="@string/points_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


  </RelativeLayout>
  <View android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@+id/layout"
      android:layout_marginTop="@dimen/small_margin"
      android:layout_marginLeft="@dimen/default_margin"
      android:layout_marginRight="@dimen/default_margin"
      android:background="@color/md_grey_400"/>
</RelativeLayout>
